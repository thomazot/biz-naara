.products, .product
    --products-border-color: #ecedf2

    &
        padding-bottom: 40px

    @media mobile
        .owl-pagination
            display: none

    &__title
        padding: 50px 0 20px
        color: var(--primary)
        text-align: center
        text-transform: uppercase
        font-weight: light
        font-size: 16px
        line-height: 1.3

        strong
            display: block
            font-size: 30px

    &__name
        display: block
        overflow: hidden
        margin-bottom: 20px
        height: 34px
        color: var(--primary)
        text-transform: uppercase
        font-weight: bold
        font-size: 18px
        line-height: 16px

    &__actions
        padding-bottom: 20px

        .button
            display: flex
            justify-content: center
            align-items: center
            margin: 0 auto
            padding: 0
            max-width: 100%
            width: 150px
            height: 33px
            border-radius: 33px
            background: var(--green)
            text-transform: uppercase
            font-weight: bold
            font-size: 12px

            .ico
                display: none

    &__main
        flex: 1
        padding: 0 30px
        min-height: 1
        text-align: center

    &__case
        display: flex
        flex: 0 1 360px
        flex-flow: column nowrap
        max-width: 100%
        width: 360px
        border: solid 1px var(--primary)
        border-radius: 5px
        box-shadow: none
