.footer
    --footer-border-color: #f0e8ed

    &-container
        margin-top: -16px

    &__title
        padding-bottom: 10px
        text-transform: uppercase
        font-weight: medium
        font-size: 16px
        line-height: 1.3

    &__row
        display: flex
        justify-content: space-between
        padding: 30px 0

        &--nav
            background: var(--primary)
            color: var(--primary-contrast)

            @media desktop
                padding: 40px 0
                box-shadow: 800px 0 0 var(--primary), -800px 0 0 var(--primary)

            @media mobile
                box-shadow: 300px 0 0 var(--primary), -300px 0 0 var(--primary)

        &--payments-send-social-security
            display: flex
            flex-flow: row wrap
            justify-content: space-between

            .footer
                &__title
                    color: var(--tertiary)

                    @media desktop
                        padding-bottom: 30px

                &__box
                    @media mobile
                        &:nth-child(2)
                            flex: 0 0 100%

            @media mobile
                .pays__svg, .ships__svg
                    height: 30px

    &__box
        padding: 10px

    &__phone, &__timer, &__email
        &, a
            color: var(--primary-contrast)
            text-transform: uppercase
            font-size: 12px
            line-height: 25px

    &__copyright
        padding: 30px 0
        border-top: solid 1px var(--footer-border-color)
        color: var(--tertiary)
        text-align: center
        font-size: 10px