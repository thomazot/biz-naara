.about
    margin-top: 100px
    width: 100%
    background: var(--primary)
    color: var(--secundary-contrast)

    @media mobile
        overflow: hidden

    &__container
        container()

        display: flex
        align-items: center

    &__figure
        flex: 0 1 512px
        margin-top: -35px

        img
            object-fit: contain
            object-position: center bottom

        @media mobile
            flex: 0 1 180px
            align-self: flex-end
            margin-top: 20px
            margin-right: -75px
            transform: scaleX(-1)

    &__main
        flex: 1
        padding: 30px 0
        min-width: 0

        @media mobile
            order: -1

        @media desktop
            padding-left: 50px

    &__title
        padding-bottom: 15px
        line-height: 1

        @media mobile
            padding-left: 15px

        > span
            font-weight: light
            font-size: 16px

        strong
            display: block
            font-weight: regular
            font-size: 26px

            span
                color: var(--primary)

    &__content
        font-weight: light
        font-size: 16px

        p
            padding: 15px 0

        @media mobile
            overflow: auto
            padding-left: 15px
            max-height: 245px
            text-align: left
            direction: rtl