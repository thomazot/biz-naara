.about-list
    position: relative
    color: var(--primary)
    text-align: center

    &__container
        margin: 0 auto
        max-width: calc(100% - 36px)
        width: viewport

    &:not(.about-list--green)
        &:after
            position: absolute
            left: 50%
            width: 100%
            height: 1px
            background: var(--primary)
            box-shadow: 300px 0 0 var(--primary), -300px 0 0 var(--primary)
            content: ''
            transform: translateX(-50%)

            @media (min-width: 992px)
                box-shadow: 800px 0 0 var(--primary), -800px 0 0 var(--primary)

    &--green
        --primary: var(--green)

    &__header
        padding: 45px 0

    &__title
        color: currentColor
        text-transform: uppercase
        font-weight: bold
        font-size: 30px

    &__descriptions
        text-transform: uppercase
        font-weight: light
        font-size: 16px

    &__list
        display: flex
        flex-flow: row wrap
        justify-content: space-around

    &__item
        flex: 0 1 340px
        padding: 0 20px 40px

    &__name
        padding: 20px 0
        text-transform: uppercase
        font-weight: bold
        font-size: 18px

    &__text
        font-weight: light
        font-size: 14px

    &__footer
        padding: 50px 0

    &__link
        display: flex
        justify-content: center
        align-items: center
        margin: 0 auto
        max-width: 100%
        width: 290px
        height: 70px
        border-radius: 70px
        background: var(--primary)
        color: var(--primary-contrast)

        &:hover
            color: var(--primary-contrast)

            @media (min-width: 992px)
                background: var(--primary-contrast)
                box-shadow: 0 0 0 1px var(--primary)
                color: var(--primary)